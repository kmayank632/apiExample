<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApiPractice" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryVariant">@color/colorWhite</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Secondary</item>
        <item name="colorSecondaryVariant">@color/SecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status Bar Color -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

        <!-- Bottom System Navigation Bar Color -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="myNavigationDrawerStyle" >
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <!--PinView Style-->
    <style name="PinWidget.PinView.OTPStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="itemWidth">@dimen/_40sdp</item>
        <item name="itemHeight">@dimen/_40sdp</item>
        <item name="itemCount">4</item>
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">@dimen/extra_large_text</item>
        <item name="itemSpacing">@dimen/_12sdp</item>
        <item name="android:inputType">number|text</item>
        <item name="android:hint">@string/otp_hint</item>
        <item name="android:textColorHint">?attr/colorControlHighlight</item>
        <item name="viewType">rectangle</item>
        <item name="itemRadius">@dimen/_5sdp</item>
        <item name="lineColor">@android:color/white</item>
        <item name="android:cursorVisible">true</item>
        <item name="cursorColor">@color/colorBlack</item>
        <item name="android:itemBackground">@android:color/white</item>
        <item name="hideLineWhenFilled">true</item>
        <item name="android:state_selected">true</item>
    </style>

    <!--    EditText Style-->
    <style name="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColorHint">?attr/colorControlHighlight</item>
    </style>

    <!--    Button Solid Style-->
    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:background">@drawable/bg_rounded_solid_blue</item>
        <item name="backgroundTint">@null</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!--    Button Rounded Outline Style-->
    <style name="ButtonStyle.Outline">
        <item name="android:background">@drawable/bg_rounded_outline_blue</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/colorBlue</item>
    </style>

    <!--    Button Rounded Outline Style-->
    <style name="ButtonStyle.Outline.Red">
        <item name="android:background">@drawable/bg_rounded_outline_red</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <!--   12ssp(parent) text Size-->
    <style name="TextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- 10ssp text Size-->
    <style name="TextViewStyle.REGULAR">
        <item name="android:textSize">@dimen/regular_text</item>
    </style>
    <!--   8ssp text Size-->
    <style name="TextViewStyle.SMALL">
        <item name="android:textSize">@dimen/small_text</item>
    </style>
    <!--   14ssp text Size-->
    <style name="TextViewStyle.LARGE">
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <!-- MEDIUM FONT STYLE -->
    <style name="TextViewStyle.MEDIUM">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>
    <!-- BOLD FONT STYLE -->
    <style name="TextViewStyle.BOLD">
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>


    <!--Logo Style-->
    <style name="LogoStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:src">@drawable/main_logo</item>
        <item name="android:padding">@dimen/_24sdp</item>
        <item name="layout_constraintDimensionRatio">H,4:3</item>
    </style>

    <!--Horizontal Divider line Style-->
    <style name="DividerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_2sdp</item>
        <item name="android:background">@drawable/divider</item>
    </style>


    <!--Full Screen Dialog Style -->
    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorBlue</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorBlue</item>
    </style>


    <!-- Rating Bar Style -->
    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorControlNormal">@color/colorLightGrey</item>
        <item name="colorControlActivated">@color/colorLRating</item>

    </style>

    <!--Search EditText Style-->
    <style name="SearchEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/bg_search_edit_text</item>
        <item name="android:textColorHint">?attr/colorControlHighlight</item>
    </style>

    <!-- 10ssp text Size-->
    <style name="TextViewStyle.HintColor">
        <item name="android:textColorHint">?attr/colorControlHighlight</item>
    </style>

    <style name="TabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
        <item name="tabTextColor">@color/colorBlue</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="buttonTint">@android:color/transparent</item>
        <item name="buttonTintMode">src_over</item>
    </style>



    <style name="datePicker" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/colorBlue</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Custom BottomSheetDialog Styles -->
    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Set BottomSheet Background -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--  Customize theme for Horizontal Divider -->
    <style name="HorizontalViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/corner_stroke</item>
        <item name="android:background">@color/colorLightSage</item>
    </style>

    <!-- Blood Items -->
    <string-array name="blood_items">
        <item>A+</item>
        <item>A-</item>
        <item>B+</item>
        <item>B-</item>
        <item>O+</item>
        <item>O-</item>
        <item>AB+</item>
        <item>AB-</item>
    </string-array>

    <!-- Picker Dialog Theme -->
    <style name="PickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/skyBlue</item>
    </style>

    <!-- Sort Items -->
    <string-array name="sort_items">
        <item>Name</item>
       </string-array>

    <!-- Dummy Items -->
    <string-array name="items">
        <item>Item 1</item>
        <item>Item 2</item>
        <item>Item 3</item>
        <item>Item 4</item>
    </string-array>

    <string name="otp_hint">0123</string>
</resources>